; PlatformIO Project Configuration File for ESP32-B
; Backstop motor controller with AS5600 I2C encoder PID loop
; Modbus RTU slave over RS-485
; AS5600 I2C magnetic encoder: SDA=GPIO21, SCL=GPIO22

[env:esp32dev]
platform = espressif32
board = esp32dev
framework = arduino

; Serial monitor settings
monitor_speed = 115200

; Build flags
build_flags =
    -DCORE_DEBUG_LEVEL=3
    -DMODBUS_SLAVE_ID=3

; Library dependencies
lib_deps =
    emelianov/modbus-esp8266@^4.1.0

; Upload settings
upload_speed = 921600
